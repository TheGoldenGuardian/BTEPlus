<Items>
  <Item
    name="Makeshift Suppressed Pistol"
	aliases="Pistol,M1911,Traitor Handgun,Silenced Pistol"
    category="Equipment"
    tags="meditem,weapon"
    description="A small, unreliably made pistol with a suppressor attached. Quite clearly a traitor's weapon."
    cargocontainername="Weapons Shipping Box"
    impacttolerance="3"
	canuseonself="true">

    <Deconstruct time="10">
      <Item name="Spare Parts"/>
    </Deconstruct>

    <Sprite texture="traitorpistol.png" sourcerect="0,0,59,21" depth="0.55"/>

    <Body width="59" height="21" density="25"/>

    <RangedWeapon barrelpos="36,5" spread="1" unskilledspread="8" reload="0.8">
      <Sound file="Mods/BTEPlus/Items/silencedShot.ogg" type="OnUse"/>
      <RequiredItems name="Subsonic Round" type="Contained" msg="The loaded ammunition is too damaged"/>
      <RequiredSkill name="Weapons" level="45"/>
      <StatusEffect type="OnBroken" target="This" Condition="1" delay="15"/>
      <StatusEffect type="Always" target="This" Condition="15"/>
      <StatusEffect type="OnUse">
        <Explosion range="150" force="1" shockwave="false" flames="false" smoke="false" sparks="false" camerashake="2.0"/>
      </StatusEffect>
      <StatusEffect type="OnImpact" target="This">
        <sound file="Mods/BTE/Items/Weapons/GunHit.ogg"/>
      </StatusEffect>
    </RangedWeapon>

    <ItemContainer capacity="7" hideitems="true">
      <Containable name="Subsonic Round"/>
    </ItemContainer>

    <Holdable slots="RightHand,LeftHand,Any" controlpose="true"
            holdpos="31,-23" aimpos="100,18" handle1="-14,0" handle2="-14,0" holdangle="36"/>
			
	<ItemComponent>
	  <StatusEffect type="OnUse" target="Character" Health="-45">
	    <sound file="Mods/BTEPlus/Items/silencedShot.ogg"/>
		<Use/>
	  </StatusEffect>
	  <StatusEffect type="OnUse" target="Character" bleeding="2" duration="3">
		<Use/>
	  </StatusEffect>
	  <StatusEffect type="OnUse" target="Character" stun="15">
		<Use/>
	  </StatusEffect>
    </ItemComponent>
  </Item>
  
  <Item
    name="Subsonic Round"
	aliases=".45,Traitor Pistol Round"
    category="Equipment"
	Tags="smallitem,weapon"
	description="A large, hollow point pistol bullet that is slightly smaller than a revolver round."
    interactthroughwalls="true"
	cargocontainername="Weapons Shipping Box">
	
	<Deconstruct time="5">      
      <Item name="Steel Sliver" outcondition="0.50"/>
	  <Item name="Propellant Powder" mincondition="0.99" outcondition="0.5"/>
    </Deconstruct>

    <Sprite texture="traitorweapons.png" sourcerect="59,0,10,3" depth="0.55"/>

    <Body width="10" height="3" density="23"/>

	<Pickable slots="Any"/>
    <Projectile hitscan="true" removeonhit="true">
      <Attack damage="40" structuredamage="20" bleedingdamage="4" stun="1.5" targetforce="30" damagetype="Blunt"/>
    </Projectile>
  </Item>
</Items>