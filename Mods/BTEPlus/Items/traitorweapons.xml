    <Sprite texture="traitorweapons.png" sourcerect="59,3,20,3" depth="0.55"/>

    <Body width="20" height="3" density="30"/>

	<Pickable slots="Any"/>
    <Projectile hitscan="true" removeonhit="true">
      <Attack damage="40" bleedingdamage="6" stun="0.5" targetforce="15" damagetype="Blunt"/>
	  <StatusEffect type="OnImpact" target="This">
	    <Explosion range="50" structuredamage="70" force="5" shockwave="false" flames="false" smoke="false" flash="false" sparks="false" camerashake="5.0"/>
